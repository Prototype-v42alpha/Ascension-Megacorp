<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- 机兵残骸基类 -->
  <ThingDef Name="USAC_BaseMechWreck" ParentName="BuildingBase" Abstract="True">
    <thingClass>Building</thingClass>
    <category>Building</category>
    <description>The destroyed remains of a USAC mech unit. Can be reinstalled as decoration or deconstructed for basic salvage materials.</description>
    <randomizeRotationOnSpawn>false</randomizeRotationOnSpawn>
    <drawerType>MapMeshAndRealTime</drawerType>
    <tickerType>Never</tickerType>
    <canOverlapZones>false</canOverlapZones>
    <altitudeLayer>Building</altitudeLayer>
    <selectable>true</selectable>
    <useHitPoints>true</useHitPoints>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory/>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <blockWind>false</blockWind>
    <rotatable>true</rotatable>
    <castEdgeShadows>false</castEdgeShadows>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>Filth_MachineBits</filthLeaving>
    <surfaceType>Item</surfaceType>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <Flammability>0</Flammability>
      <Beauty>-10</Beauty>
      <Mass>50</Mass>
    </statBases>
    <building>
      <claimable>false</claimable>
      <repairable>false</repairable>
      <deconstructible>true</deconstructible>
    </building>
  </ThingDef>

  <!-- M88 Rocky 残骸 -->
  <ThingDef ParentName="USAC_BaseMechWreck">
    <defName>USAC_Wreck_Rocky</defName>
    <label>M88 Rocky wreck</label>
    <graphicData>
      <texPath>Things/Mech/rocky</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>1.1</drawSize>
    </graphicData>
    <size>(1,1)</size>
    <fillPercent>0.35</fillPercent>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>35</Mass>
    </statBases>
    <killedLeavingsRanges>
      <ChunkSlagSteel>0~1</ChunkSlagSteel>
    </killedLeavingsRanges>
    <costList>
      <Steel>15</Steel>
      <Plasteel>3</Plasteel>
    </costList>
  </ThingDef>

