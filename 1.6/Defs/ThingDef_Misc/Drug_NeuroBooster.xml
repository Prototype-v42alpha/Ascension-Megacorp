  <ChemicalDef>
    <defName>USAC_NeuroBooster</defName>
    <label>neuro-booster</label>
    <addictionHediff>USAC_NeuroBoosterAddiction</addictionHediff>
    <canBinge>false</canBinge>
    <generateAddictionGenes>false</generateAddictionGenes>
  </ChemicalDef>

  <NeedDef ParentName="DrugAddictionNeedBase">
    <defName>Chemical_USAC_NeuroBooster</defName>
    <needClass>Need_Chemical</needClass>
    <label>neuro-booster</label>
    <description>This person's neural stability depends on regular USAC neuro-booster injections.</description>
    <listPriority>46</listPriority>
    <fallPerDay>0.0667</fallPerDay>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
  </NeedDef>

  <HediffDef ParentName="AddictionBase">
    <defName>USAC_NeuroBoosterAddiction</defName>
    <label>neuro-booster dependence</label>
    <description>Permanent alteration of neural pathways. Withdrawal causes severe instability and lethal neural collapse.</description>
    <hediffClass>Hediff_Addiction</hediffClass>
    <chemicalNeed>Chemical_USAC_NeuroBooster</chemicalNeed>
    <everCurableByItem>false</everCurableByItem>
    <stages>
      <li></li>
      <li>
        <label>unmet</label>
        <painOffset>0.5</painOffset>
        <lifeThreatening>true</lifeThreatening>
        <deathMtbDays>10</deathMtbDays>
        <mtbDeathDestroysBrain>true</mtbDeathDestroysBrain>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.8</setMax>
          </li>
        </capMods>
        <mentalStateGivers>
          <li>
            <mentalState>Berserk</mentalState>
            <mtbDays>0.35</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
    </stages>
  </HediffDef>

