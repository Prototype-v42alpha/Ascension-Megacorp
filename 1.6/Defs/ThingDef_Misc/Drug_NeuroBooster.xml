<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Neuro-Booster -->
  <ThingDef ParentName="MakeableDrugBase">
    <defName>USAC_NeuroBooster</defName>
    <label>neuro-booster</label>
    <description>A potent neuro-augment serum that enhances neural activity and rational thinking. Widely used by USAC technical workers and soldiers. It causes high addiction and requires regular administration to maintain stability, but provides significant bandwidth and consciousness boosts.</description>
    <descriptionHyperlinks>
      <HediffDef>USAC_NeuroBoosterHigh</HediffDef>
      <HediffDef>USAC_NeuroBoosterAddiction</HediffDef>
    </descriptionHyperlinks>
    <graphicData>
      <texPath>Things/Item/Drug/GoJuice</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <MarketValue>750</MarketValue>
      <Mass>0.05</Mass>
    </statBases>
    <techLevel>Spacer</techLevel>
    <costList>
      <Neutroamine>4</Neutroamine>
      <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <ingestible>
      <drugCategory>Hard</drugCategory>
      <foodType>Processed, Fluid</foodType>
      <baseIngestTicks>80</baseIngestTicks>
      <ingestSound>Ingest_Inject</ingestSound>
      <ingestHoldOffsetStanding>
        <northDefault>
          <offset>(0.18,0,0)</offset>
        </northDefault>
      </ingestHoldOffsetStanding>
      <ingestCommandString>Inject {0}</ingestCommandString>
      <ingestReportString>Injecting {0}.</ingestReportString>
      <useEatingSpeedStat>false</useEatingSpeedStat>
      <chairSearchRadius>0</chairSearchRadius>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>USAC_NeuroBoosterHigh</hediffDef>
          <severity>1.0</severity>
          <toleranceChemical>USAC_NeuroBooster</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>USAC_NeuroBoosterAddiction</hediffDef>
          <severity>1.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Drug">
        <chemical>USAC_NeuroBooster</chemical>
        <addictiveness>1.0</addictiveness>
        <existingAddictionSeverityOffset>0.25</existingAddictionSeverityOffset>
        <needLevelOffset>1.0</needLevelOffset>
        <listOrder>210</listOrder>
        <overdoseSeverityOffset>0.15~0.30</overdoseSeverityOffset>
        <largeOverdoseChance>0.01</largeOverdoseChance>
      </li>
    </comps>
    <tradeTags>
      <li>USAC_NeuroBooster</li>
    </tradeTags>
  </ThingDef>

