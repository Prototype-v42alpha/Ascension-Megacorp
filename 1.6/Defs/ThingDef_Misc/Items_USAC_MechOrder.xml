<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- 机兵订单基础 -->
  <ThingDef Name="USAC_BaseMechOrder" ParentName="ResourceBase" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <drawerType>MapMeshOnly</drawerType>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <useHitPoints>true</useHitPoints>
    <selectable>true</selectable>
    <stackLimit>10</stackLimit>
    <tradeability>Buyable</tradeability>
    <tradeTags>
      <li>USAC_MechOrder</li>
    </tradeTags>
    <thingCategories>
      <li>ItemsMisc</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <Flammability>0</Flammability>
      <Mass>0.1</Mass>
    </statBases>
  </ThingDef>

  <!-- M88 Rocky 订单 -->
  <ThingDef ParentName="USAC_BaseMechOrder">
    <defName>USAC_MechOrder_Rocky</defName>
    <label>M88 "Rocky" order</label>
    <description>A USAC military contract for one M88 "Rocky" synthetic infantry unit. When purchased, an inactive mech will be delivered via drop pod.</description>
    <graphicData>
      <texPath>Things/Mech/rocky_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>1500</MarketValue>
    </statBases>
    <modExtensions>
      <li Class="USAC.ModExtension_MechOrder">
        <mechKindDef>USAC_Mech_Rocky</mechKindDef>
      </li>
    </modExtensions>
  </ThingDef>

