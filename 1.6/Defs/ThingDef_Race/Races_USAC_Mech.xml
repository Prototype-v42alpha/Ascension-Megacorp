<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!--生命阶段-->
  <LifeStageDef>
    <defName>USAC_Mech_Operational</defName>
    <label>operational</label>
    <visible>false</visible>
    <caravanRideable>true</caravanRideable>
  </LifeStageDef>

  <!--机兵基类-->
  <ThingDef Name="USAC_BaseMechRace" ParentName="BaseMechanoid" Abstract="True">
    <tradeability>All</tradeability>
    <statBases>
      <MoveSpeed>4.5</MoveSpeed>
      <ArmorRating_Blunt>0.15</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.25</ArmorRating_Sharp>
      <PsychicSensitivity>0</PsychicSensitivity>
      <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">1</ToxicEnvironmentResistance>
    </statBases>
    <race>
      <intelligence>ToolUser</intelligence>
      <thinkTreeMain>Mechanoid</thinkTreeMain>
      <soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
      <lifeStageAges>
        <li>
          <def>USAC_Mech_Operational</def>
          <minAge>0</minAge>
        </li>
      </lifeStageAges>
    </race>
    <tradeTags>
      <li>USAC_Mech</li>
    </tradeTags>
    <comps>
      <li Class="USAC.CompProperties_MechReadiness">
        <capacity>100</capacity>
        <consumptionPerDay>10</consumptionPerDay>
        <supplyDef>ComponentIndustrial</supplyDef>
        <lowThreshold>0</lowThreshold>
        <lowReadinessHediff>USAC_LowReadiness</lowReadinessHediff>
      </li>
      <li Class="Fortified.CompProperties_MechDeactivate"/>
    </comps>
    <modExtensions>
      <li Class="Fortified.ModExtension_MechCapsule" />
    </modExtensions>
    <butcherProducts>
      <Steel>15</Steel>
      <Plasteel>5</Plasteel>
    </butcherProducts>
    <tools>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
      </li>
    </tools>
  </ThingDef>

  <!-- USAC 人形机兵基础 -->
  <ThingDef Name="USAC_BaseHumanoidMech" ParentName="USAC_BaseMechRace" Abstract="True">
    <race>
      <body>USAC_Humanoid_Soldat</body>
      <baseBodySize>1.0</baseBodySize>
      <baseHealthScale>1.0</baseHealthScale>
    </race>
    <tools>
      <li>
        <label>left fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
      </li>
    </tools>
  </ThingDef>

  <!-- USAC 四足机兵基础 -->
  <ThingDef Name="USAC_BaseQuadMech" ParentName="USAC_BaseMechRace" Abstract="True">
    <race>
      <body>MechanicalCentipede</body>
      <baseBodySize>1.5</baseBodySize>
      <baseHealthScale>1.5</baseHealthScale>
    </race>
  </ThingDef>

  <!-- USAC 重型双足机兵基础 -->
  <ThingDef Name="USAC_BaseHeavyBipedMech" ParentName="USAC_BaseMechRace" Abstract="True">
    <race>
      <body>USAC_Bipedal</body>
      <baseBodySize>2.0</baseBodySize>
      <baseHealthScale>3.0</baseHealthScale>
    </race>
  </ThingDef>

  <!-- USAC PawnKind 基础 -->
  <PawnKindDef Name="USAC_BaseMechKind" Abstract="True">
    <defaultFactionType>USAC_Faction</defaultFactionType>
    <aiAvoidCover>false</aiAvoidCover>
    <destroyGearOnDrop>false</destroyGearOnDrop>
    <isFighter>true</isFighter>
  </PawnKindDef>

</Defs>
