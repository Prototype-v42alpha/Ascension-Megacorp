    </weaponTags>
    <weaponMoney>1500~3000</weaponMoney>
  </PawnKindDef>

  <!-- ==================== M7 "Cobalt" ==================== -->
  <!-- 基于 DMS Hyrax 放大版，中型四足货运机兵 -->
  <ThingDef ParentName="USAC_BaseQuadMech">
    <defName>USAC_Mech_Cobalt</defName>
    <label>M7 "Cobalt"</label>
    <description>A medium quadruped cargo mech with integrated machine gun. Features shotgun-resistant armor plating, cargo hauling capability, and smoke grenade deployment system.</description>
    <statBases>
      <MoveSpeed>4.0</MoveSpeed>
      <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.4</ArmorRating_Blunt>
      <ArmorRating_Heat>1.0</ArmorRating_Heat>
      <StaggerDurationFactor>0</StaggerDurationFactor>
      <MechEnergyUsageFactor>0.5</MechEnergyUsageFactor>
      <CarryingCapacity>120</CarryingCapacity>
      <BandwidthCost MayRequire="Ludeon.Rimworld.Biotech">2</BandwidthCost>
      <WastepacksPerRecharge MayRequire="Ludeon.Rimworld.Biotech">2</WastepacksPerRecharge>
    </statBases>
    <race>
      <body>USAC_Hound</body>
      <baseBodySize>1.1</baseBodySize>
      <baseHealthScale>1.2</baseHealthScale>
      <mechWeightClass>Medium</mechWeightClass>
      <mechEnabledWorkTypes>
        <li>Hauling</li>
      </mechEnabledWorkTypes>
    </race>
    <comps>
      <li Class="USAC.CompProperties_MechWreck">
        <wreckDef>USAC_Wreck_Cobalt</wreckDef>
      </li>
      <li Class="Fortified.CompProperties_VehicleWeapon">
        <drawData>
          <dataEast>
            <offset>(0.5,0,0.3)</offset>
          </dataEast>
          <dataWest>
            <offset>(-0.5,0,0.3)</offset>
          </dataWest>
          <dataSouth>
            <offset>(0,0,-0.3)</offset>
          </dataSouth>
          <dataNorth>
            <offset>(0,0,0.4)</offset>
          </dataNorth>
        </drawData>
        <turretRotationFollowPawn>true</turretRotationFollowPawn>
        <rotationSmoothTime>0.05</rotationSmoothTime>
      </li>
    </comps>
    <butcherProducts>
      <Steel>30</Steel>
      <Plasteel>8</Plasteel>
    </butcherProducts>
  </ThingDef>

  <PawnKindDef ParentName="USAC_BaseMechKind">
