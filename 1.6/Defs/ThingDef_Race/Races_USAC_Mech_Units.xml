      </li>
    </tools>
    <comps>
      <li Class="USAC.CompProperties_MechWreck">
        <wreckDef>USAC_Wreck_Omaha</wreckDef>
      </li>
      <li Class="Fortified.CompProperties_VehicleWeapon">
        <drawData>
          <dataEast>
            <offset>(0.2,0,-0.4)</offset>
          </dataEast>
          <dataWest>
            <offset>(-0.2,0,1)</offset>
            <layer>-20</layer>
          </dataWest>
          <dataSouth>
            <offset>(-1,0,0)</offset>
          </dataSouth>
          <dataNorth>
            <offset>(1,0,0.2)</offset>
          </dataNorth>
        </drawData>
        <turretRotationFollowPawn>true</turretRotationFollowPawn>
        <rotationSmoothTime>0.05</rotationSmoothTime>
